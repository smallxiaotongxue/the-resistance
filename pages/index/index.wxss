/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 100rpx;
}
.userinfo button {
  width: 200rpx;
  height: 30px;
  line-height: 30px;
  font-size: 14px;
  border-radius: 30px;
}
.bg {
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
}

.usermotto {
  margin-top: 50px;
   color: #fff;
   font-size: 25px;
   font-weight: bold;
}

.bottom-link{
  position: fixed;
  text-align: center;
  bottom: 0;
  font-size: 14px;
  color: #fff;
  line-height: 30px;
  text-decoration: underline;
}
