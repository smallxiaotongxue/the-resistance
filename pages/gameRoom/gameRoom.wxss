.person-number {
  font-size: 32rpx;
  padding: 30rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 20px 0;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 10rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
  font-size: 14px;
  max-width: 175rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}

.game-member{
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  margin: 20rpx 0;
}
.member-item{
  width: 175rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.qrcode{
  display: block;
  width: 300rpx;
  height: 300rpx;
  text-align: center;
  margin: 20rpx auto;
}