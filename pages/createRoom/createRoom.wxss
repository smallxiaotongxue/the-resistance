.gameroom-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 0;
  box-sizing: border-box;
}

.form-list {
  width: 100%;
  overflow-x: hidden;
  box-sizing: border-box;
}

.list-item {
  min-height: 80rpx;
  padding-left: 15px;
  line-height: 80rpx;
}
.list-item text {
  display: inline-block;
  width: 200rpx;
  font-size: 14px;
}

.item-title {
  font-size: 14px;
  width: 200rpx;
  line-height: 80rpx;
}

.list-item switch {
  float: right;
  transform: scale(0.7);
}
.list-input {
  font-size: 14px;
  display: inline-block;
  vertical-align: middle;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 20px 0;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 10rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
  font-size: 14px;
  max-width: 175rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}

.game-member {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  margin: 20rpx 0;
}

.member-item {
  width: 175rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
