<!-- 游戏房间  -->
<view class='gameroom-container'>

  <view class="userinfo">
    <block>
      <image wx:if="{{userInfo.avatarUrl}}" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>

  <view class='page-body'>

    <text class='config-title'>房间号：1</text>
    <view class="config">
      <view class='config-item'>
        <text>随机担任法官</text>
        <switch checked />
      </view>   
    </view>

    <text class='config-title'>参与成员</text>
    <view class='game-member'>
      <view class="member-item">
        <image wx:if="{{userInfo.avatarUrl}}" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
        <text class="userinfo-nickname">{{userInfo.nickName}}</text>
      </view> 
      <view class="member-item">
        <image wx:if="{{userInfo.avatarUrl}}" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
        <text class="userinfo-nickname">{{userInfo.nickName}}</text>
      </view> 
      <view class="member-item">
        <image wx:if="{{userInfo.avatarUrl}}" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
        <text class="userinfo-nickname">{{userInfo.nickName}}</text>
      </view> 
      <view class="member-item">
        <image wx:if="{{userInfo.avatarUrl}}" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
        <text class="userinfo-nickname">{{userInfo.nickName}}</text>
      </view> 
      <view class="member-item">
        <image wx:if="{{userInfo.avatarUrl}}" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
        <text class="userinfo-nickname">{{userInfo.nickName}}</text>
      </view> 
  
    </view>

    <view class="btn-area" id="buttonContainer">
      <button type="primary" bindtap="toGameRoom">开始游戏</button>
    </view>

  </view>

</view>