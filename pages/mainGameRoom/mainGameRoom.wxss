.pop-modal{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.6);
  color: #fff;
}
.inner-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 150rpx;
}
.swiper-indicator {
    margin-bottom: 10rpx;
}
swiper {
    width: 500rpx;
    padding: 20rpx 0;
    border-top: 1px solid lightgray;
    border-bottom: 1px solid lightgray;
}
.item-container {
    display: flex;
    flex-direction: row;
}
.side-space {
    width: 50rpx;
    height: 100%;
}
.cover {
    width: 400rpx;
    height: 400rpx;
}
.role-logo-container {
    width: 400rpx;
    height: 400rpx;
    display: flex;
    flex-direction: center;
    justify-content: center;
    align-items: center;
}
.role-logo {
    width: 400rpx;
    height: 400rpx;
    transition: width 1s ease-in, height 1s ease-in;
}
/*.role-logo-after-animation {
    width: 400rpx;
    height: 400rpx;
    opacity: 1;
}*/
.role-name {
    padding: 20rpx 0 0 0;
}
.role-description {
    padding: 20rpx 100rpx;
    font-size: 0.8em;
    text-align: justify;
}