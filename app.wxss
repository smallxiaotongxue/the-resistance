/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

/* flex公共样式 */
.flex-align-center{
  display: flex;
  align-items: center;
}

/* 公共样式 */

.mt-50{margin-top: 50rpx;}
.mt-150{margin-top: 150rpx;}
.mt-350{margin-top: 350rpx;}
.padding-both20{
  padding: 20rpx;
}
.title-tips{
  padding: 20rpx;
  background: #f2f2f2;
  font-size: 32rpx;
  color: #666;
}
.btn-group {
}
.btn-group button {
  width: 550rpx;
  height: 92rpx;
  line-height: 92rpx;
  font-size: 32rpx;
  border-radius:23px;
  margin-top: 30rpx;
  background: #99CE66;
}
.btn-group .btn-ffffff {
  background: #fff;
  color: #666;
}
.btn-fixed-bottom {
  position: fixed;
  background: #fff;
  z-index: 10;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 30rpx 0;
}
.btn-fixed-bottom button:only-child{
  margin-top: 0;
}
.ui-input {
  margin: 20rpx;
  font-size: 32rpx;
  line-height: 40rpx;
  border-bottom: 1px solid;
  text-align: center;
} 
